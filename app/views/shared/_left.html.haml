.left
  .left__userinfo
    %span.left__userinfo-name
      = current_user.name
    .left__userinfo-icons
      = link_to new_group_path do
        = fa_icon "edit"
      =link_to edit_user_path(current_user) do
        = fa_icon "cog"
  .left__groups
    - current_user.groups.each do |group|
      .left__groups__list
        = link_to group_messages_path(group) do
          %p.left__groups__list-name
            = group.name
          %p.left__groups__list-message
            = group.show_last_message
